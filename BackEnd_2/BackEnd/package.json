{
  "name": "plataforma-denuncias-backend",
  "version": "1.0.0",
  "description": "Backend completo para plataforma de denuncias ciudadanas con Node.js, Express y MySQL",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --testTimeout=10000",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "db:seed": "node scripts/initDatabase.js seed",
    "db:clean": "node scripts/initDatabase.js clean",
    "db:reinit": "node scripts/initDatabase.js reinit",
    "db:tables": "node scripts/initDatabase.js tables",
    "create:user": "node scripts/createUsuario.js",
    "create:autoridad": "node scripts/createAutoridad.js",
    "clean:uploads": "node -e \"require('./src/utils/fileUpload').cleanOldFiles()\""
  },
  "keywords": [
    "denuncias",
    "ciudadanas",
    "nodejs",
    "express",
    "mysql",
    "backend",
    "api",
    "plataforma",
    "urbanismo"
  ],
  "author": "Tu Nombre",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "google-auth-library": "^10.5.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.16.0",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "eslint": "^8.48.0",
    "jest": "^29.6.4",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tuusuario/plataforma-denuncias-backend.git"
  },
  "bugs": {
    "url": "https://github.com/tuusuario/plataforma-denuncias-backend/issues"
  },
  "homepage": "https://github.com/tuusuario/plataforma-denuncias-backend#readme"
}
